@{ Layout = null; }
<!DOCTYPE html>
<html class="no-js">
<head>
    <title>Every Angle - Error</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Description" content="Error" />
    <meta name="Keywords" content="Error" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <style type="text/css">
    html, body {
        height: 100%;
        font-family: Arial;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
    a {
        text-decoration: none;
        cursor: pointer;
    }
    a:focus, a:active {
        outline: none;
    }
    img {
        border: 0;
    }
    .btn {
        position: relative;
        display: inline-block;
        vertical-align: top;
        padding: 0 5px;
        min-width: 80px;
        border: 1px solid #5f5f5f;
        border-radius: 4px;
        color: #333;
        font-size: 11px;
        font-weight: bold;
        text-align: center;
        text-shadow: 1px 1px #fff;
        margin-right: 5px;
        margin-left: 5px;
        cursor: pointer;
        background: #fff url(data:image/png;base64,) left bottom repeat-x;
        height: 40px;
        line-height: 12px;
    }
    .btn:active {
        background-position: left top;
    }
    .btn span {
        display: table-cell;
        min-width: 80px;
        height: 40px;
        vertical-align: middle;
    }
    .Wrapper {
        position: relative;
        margin: 0 auto;
        width: 980px;
    }
    #TopBar {
        left: 0;
        position: absolute;
        top: 0;
        width: 100%;
        background: #fefefe url(data:image/png;base64,) left bottom repeat-x;
    }
    #TopBar .Wrapper {
        height: 63px;
    }
        #Logo {
            position: relative;
            top: 14px;
            margin-left: 11px;
            margin-right: 55px;
            width: 153px;
            height: 29px;
            display: inline-block;
            float: left;
            text-indent: -9000px;
            background: transparent url(../../images/master/ealogo.svg) left top no-repeat;
        }
    #MainContent.errorContainer {
	    width: 960px;
	    top: 130px;
    }
    #MainContent.errorContainer h2 {
	    margin: 0;
	    font-weight: normal;
	    font-size: 30px;
	    color: #414141;
    }
    #MainContent.errorContainer p {
	    margin: 40px 0;
	    font-size: 14px;
    }
    #MainContent.errorContainer a .iconBack {
	    font-size: 27px;
	    font-weight: bold;
	    display: inline;
	    margin-right: 10px;
	    float: left;
	    font-style: normal;
	    margin-top: -2px;
    }

    @@media (max-width: 979px) {
        .Wrapper {
		    width: auto;
		    min-width: 600px;
	    }

	    #MainContent.errorContainer {
		    width: auto;
		    min-width: 580px;
		    padding: 0 10px;
	    }
    }
    </style>
</head>
<body>

    <div id="MainContainer">

        <div id="TopBar">
            <div class="Wrapper">
                <a id="Logo" href="@Url.Content("~/")">Every Angle</a>
            </div>
        </div>

        <div id="MainContent" class="Wrapper errorContainer">
            <h2>@(String.IsNullOrEmpty(ViewBag.Title) ? "An error occured" : ViewBag.Title)</h2>
            <p>@(String.IsNullOrEmpty(ViewBag.Description) ? "Sorry, an error occurred while processing your request." : ViewBag.Description)</p>
            <a href="@(String.IsNullOrEmpty(ViewBag.ReturnUrl) ? @Url.Content("~/") : ViewBag.ReturnUrl)" class="btn"><span><i class="iconBack">&lsaquo;</i>@EveryAngle.Shared.Globalization.Captions.Button_BackToPreviousPage</span></a>
        </div>

    </div>

</body>
</html>