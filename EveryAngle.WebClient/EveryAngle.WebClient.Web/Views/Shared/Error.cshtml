@{ Layout = null; }
<!DOCTYPE html>
<html class="no-js">
<head>
    <title>Every Angle - Error</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="Description" content="Error" />
    <meta name="Keywords" content="Error" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @Styles.Render("~/content/css/main.css")
    @Styles.Render("~/content/externalresource/externalresource.css")
    <style type="text/css">
        #MainContent.errorContainer {
            width: 97%;
            top: 20px;
        }

        #MainContent.errorContainer h2 {
            margin: 0;
            font-weight: normal;
            font-size: 30px;
            color: #414141;
        }

        #MainContent.errorContainer p {
            margin: 40px 0;
            font-size: 14px;
        }

        #MainContent.errorContainer .btn {
            margin: 0;
        }
    </style>
</head>
<body>

    <div id="MainContainer">

        <div id="TopBar">
            <div class="Wrapper">
                @{Html.RenderPartial("~/Views/Shared/Top/Logo.cshtml", Url.Content("~/"));}
                @{Html.RenderPartial("~/Views/Shared/Top/BusinessProcessBadge.cshtml");}
            </div>
        </div>

        <div id="MainContent" class="Wrapper errorContainer">
            <h2>@(String.IsNullOrEmpty(ViewBag.Title) ? "An error occured" : ViewBag.Title)</h2>
            <p>@(String.IsNullOrEmpty(ViewBag.Description) ? "Sorry, an error occurred while processing your request." : ViewBag.Description)</p>
            <a href="@(String.IsNullOrEmpty(ViewBag.ReturnUrl) ? @Url.Content("~/") : ViewBag.ReturnUrl)" class="btn btn-ghost"><span>@EveryAngle.Shared.Globalization.Captions.Button_BackToPreviousPage</span></a>
        </div>

    </div>

</body>
</html>
