<form id="LoginForm" method="post" action="@ViewBag.PostAction">
    <div id="LoginContainer">
        <h1>@EveryAngle.Shared.Globalization.Resource.Login</h1>
        <input id="UserName" name="wc_username" class="UserName" type="text" value="" tabindex="1" placeholder="@EveryAngle.Shared.Globalization.Resource.Username" />
        <input id="Password" name="wc_password" class="Password" type="password" value="" tabindex="2" placeholder="@EveryAngle.Shared.Globalization.Resource.Password" />
        
        <div class="LogoContainer">
            <div class="Logo LogoImage"></div>
        </div>
        <input id="LoginButton" class="btn btn-primary" type="button" value="@EveryAngle.Shared.Globalization.Resource.Login" tabindex="3" />

        <a id="CancelButton" style="display: none;">@EveryAngle.Shared.Globalization.Resource.Cancel</a>
        <div class="loginLoading"></div>

        <div id="ErrorMessage" class="loginMessage"></div>
        <div class="SessonExpiredDetail"></div>



    </div>
</form>
