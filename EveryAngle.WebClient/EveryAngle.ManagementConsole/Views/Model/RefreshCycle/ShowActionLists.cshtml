@model List<EveryAngle.Core.ViewModels.Model.ActionListViewModel>
@using EveryAngle.Shared.Globalization

@(Html.Kendo().Grid(Model)
    .Name("GridActionLists")
    .Columns(columns =>
                {
                    columns.Bound(model => model.name)
                        .Sortable(false)
                        .HeaderTemplate(
                            "<div class='actionList'>"
                            + "<div class='actionListName' data-role='tooltip'>" + Resource.Name + "</div>"
                            + "<div class='actionListDescription' data-role='tooltip'>" + Resource.Description + "</div>"
                            + "<div class='actionListParams columnBoolean' data-role='tooltip'>" + Resource.Params + "</div>"
                            + "<div class='actionListActions' data-role='tooltip'>" + Resource.Actions + "</div>"
                            + "</div>"
                        )
                        .ClientTemplate(
                            "<div class='actionList'>"
                            + "<div class='actionListName' data-role='tooltip'>#= data.name #</div>"
                            + "<div class='actionListDescription' data-role='tooltip'>#= data.description #</div>"
                            + "<div class='actionListParams columnBoolean'><label><input calss='ActionListParams' value='#= data.has_parameters #' disabled='disabled' #= data.has_parameters ? checked='checked' : '' # type='checkbox'><span class='label'></span></label></div>"
                            + "<div class='actionListActions' data-role='tooltip'> #= data.actions != null ? data.ReForfatActionLists : '' #</div>"
                            + "</div>"
                        );           
                }
            )
    .Sortable()
    .Scrollable(scroll => scroll.Virtual(false).Height("auto"))
    .Resizable(resize => resize.Columns(true))
    .DataSource(dataSource => dataSource        
        .Ajax()
        .ServerOperation(false)        
     )
)