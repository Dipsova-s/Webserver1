@model EveryAngle.Core.ViewModels.Users.SystemRoleViewModel
@using EveryAngle.Shared.Globalization

<div class="contentSection contentSectionInfo @(Convert.ToBoolean(ViewData["HaveModelServer"]) ? "" : "hideNoModel")" id="AccessClient"> 
    <h4>@Resource.MC_Basic</h4>
    <div class="contentSectionInfoItem">
        <label>@Html.LabelFor(model => model.ModelPrivilege.Privileges.access_data_via_webclient)</label>
        <p>
            <label>@Html.RadioButton("AccessDataViaWebclient", true, Model.ModelPrivilege.Privileges.access_data_via_webclient.HasValue ? Model.ModelPrivilege.Privileges.access_data_via_webclient.Value == true ? true : false : false)<span class="label">@Resource.Allow</span></label>
            <label>@Html.RadioButton("AccessDataViaWebclient", false, Model.ModelPrivilege.Privileges.access_data_via_webclient.HasValue ? Model.ModelPrivilege.Privileges.access_data_via_webclient.Value == false ? true : false : false)<span class="label">@Resource.Deny</span></label>
            <label>@Html.RadioButton("AccessDataViaWebclient", "Undefined", Model.ModelPrivilege.Privileges.access_data_via_webclient.HasValue ? false : true)<span class="label">@Resource.Undefined</span></label>
        </p>
    </div>
    <div class="contentSectionInfoItem">
        <label> @Html.LabelFor(model => model.ModelPrivilege.Privileges.allow_nonvalidated_items)</label>
        <p>
            <label>@Html.RadioButton("AllowNonvalidatedItems", true, Model.ModelPrivilege.Privileges.allow_nonvalidated_items.HasValue ? Model.ModelPrivilege.Privileges.allow_nonvalidated_items.Value == true ? true : false : false)<span class="label">@Resource.Allow</span></label>
            <label>@Html.RadioButton("AllowNonvalidatedItems", false, Model.ModelPrivilege.Privileges.allow_nonvalidated_items.HasValue ? Model.ModelPrivilege.Privileges.allow_nonvalidated_items.Value == false ? true : false : false)<span class="label">@Resource.Deny</span></label>
            <label>@Html.RadioButton("AllowNonvalidatedItems", "Undefined", Model.ModelPrivilege.Privileges.allow_nonvalidated_items.HasValue ? false : true)<span class="label">@Resource.Undefined</span></label>
            <a data-target="#popupDescriptionTemplate" title="Description" data-width="600" data-min-height="100" data-role="mcPopup" class="btn btnInfo" onclick='MC.util.showDescriptionPopup(this)'></a>
            <textarea class="alwaysHidden">@Resource.MC_ShowNonValidatedItemsDescription</textarea>
        </p>
    </div>
    <div class="contentSectionInfoItem">
        <label>@Html.LabelFor(model => model.ModelPrivilege.Privileges.allow_export)</label>
        <p>
            <label>@Html.RadioButton("AllowExport", true, Model.ModelPrivilege.Privileges.allow_export.HasValue ? Model.ModelPrivilege.Privileges.allow_export.Value == true ? true : false : false, new { onclick = "MC.Models.Roles.EnableMaxExportRows(true)" })<span class="label">@Resource.Allow</span></label>
            <label>@Html.RadioButton("AllowExport", false, Model.ModelPrivilege.Privileges.allow_export.HasValue ? Model.ModelPrivilege.Privileges.allow_export.Value == false ? true : false : false, new { onclick = "MC.Models.Roles.EnableMaxExportRows(false)" })<span class="label">@Resource.Deny</span></label>
            <label>@Html.RadioButton("AllowExport", "Undefined", Model.ModelPrivilege.Privileges.allow_export.HasValue ? false : true, new { onclick = "MC.Models.Roles.EnableMaxExportRows(false)" })<span class="label">@Resource.Undefined</span></label>
            @Html.TextBox("ModelPrivilege_Privileges_max_export_rows", !Model.ModelPrivilege.Privileges.max_export_rows.HasValue || Model.ModelPrivilege.Privileges.max_export_rows.Value == 0 ? "" : Model.ModelPrivilege.Privileges.max_export_rows.Value.ToString())
        </p>
    </div>
    @if ((bool)ViewData["SupportODataService"])
    {
        <div class="contentSectionInfoItem">
            <label>@Html.LabelFor(model => model.ModelPrivilege.Privileges.access_data_via_odata)</label>
            <p>
                <label>@Html.RadioButton("AccessDataViaOData", true, Model.ModelPrivilege.Privileges.access_data_via_odata.HasValue ? Model.ModelPrivilege.Privileges.access_data_via_odata.Value == true ? true : false : false)<span class="label">@Resource.Allow</span></label>
