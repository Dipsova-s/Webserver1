                <label>@Html.RadioButton("AccessDataViaOData", "Undefined", Model.ModelPrivilege.Privileges.access_data_via_odata.HasValue ? false : true)<span class="label">@Resource.Undefined</span></label>
            </p>
        </div>
    }

